            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Share_post_Activity.Upload_Image_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Shared_Post_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Past_Order_Product_Details_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Past_Order_Header_Data_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Product_List_Activity"
            android:parentActivityName=".Activity.MainActivity"/>
